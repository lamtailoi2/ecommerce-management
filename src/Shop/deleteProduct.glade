<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  <object class="GtkWindow" id="deleteProduct">
    <property name="title" translatable="yes">Delete Product</property>
    <child>
      <object class="GtkBox" id="deleteProductBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkLabel" id="productIdLabel">
            <property name="label" translatable="yes">Product ID:</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">0</property>
          </packing>
        </child>
        <child>
          <object class="GtkEntry" id="productId">
            <property name="placeholder-text" translatable="yes">Enter Product ID</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">1</property>
          </packing>
        </child>
        <child>
          <object class="GtkButton" id="confirmButton">
            <property name="label" translatable="yes">Delete</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">2</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
</interface>